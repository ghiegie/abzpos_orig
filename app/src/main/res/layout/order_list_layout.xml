<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginTop="1dp"
    android:layout_marginRight="2dp"
    android:layout_marginBottom="1dp"
    android:id="@+id/linear_orderlist_layout"
    >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">
            <LinearLayout
                android:background="@color/white"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_itemName"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"

                        android:text="TextView"
                        android:layout_weight="2"
                        />

                    <TextView
                        android:id="@+id/tv_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:gravity="right"
                        android:layout_weight="1"

                        android:text="1000"
                        />


                    <TextView
                        android:id="@+id/tv_subtotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:gravity="right"

                        android:text="TextView"
                        />

                    <TextView
                        android:id="@+id/tv_VatIndicator"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"


                        />

                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/iv_check"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="12dp"
                    android:visibility="invisible"
                    android:src="@drawable/ic_check"/>
            </LinearLayout>

            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/linearLayoutDiscount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:orientation="vertical">




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/linearSCD"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:layout_weight="1"


                            android:orientation="horizontal"

                            >



                            <TextView
                                android:id="@+id/tv_typeOfDiscount"
                                android:layout_width="0dp"

                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:gravity="right"




                                android:layout_weight="4"
                                />

                            <TextView
                                android:id="@+id/tv_scdquantity"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:gravity="right"

                                android:layout_weight="1"

                                android:text="1"
                                />


                            <TextView
                                android:id="@+id/tv_scdsubtotal"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="scd"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/linearPWD"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:layout_weight="1"
                            android:orientation="horizontal"

                            >



                            <TextView

                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:gravity="right"



                                android:text="pwd x"
                                android:layout_weight="4"
                                />

                            <TextView
                                android:id="@+id/tv_pwdquantity"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:gravity="right"

                                android:layout_weight="1"

                                android:text="1"
                                />


                            <TextView
                                android:id="@+id/tv_pwdsubtotal"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="scd"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearathleteDisc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:layout_weight="1"
                            android:orientation="horizontal"

                            >



                            <TextView

                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:gravity="right"



                                android:text="athlete disc x"
                                android:layout_weight="4"
                                />

                            <TextView
                                android:id="@+id/tv_adiscquantity"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:gravity="right"

                                android:layout_weight="1"

                                android:text="1"
                                />


                            <TextView
                                android:id="@+id/tv_adiscsubtotal"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="scd"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearRegDisc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:layout_weight="1"
                            android:orientation="horizontal"

                            >



                            <TextView

                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:gravity="right"



                                android:text="regular disc x"
                                android:layout_weight="4"
                                />

                            <TextView
                                android:id="@+id/tv_regdiscquantity"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:gravity="right"

                                android:layout_weight="1"

                                android:text=""
                                />


                            <TextView
                                android:id="@+id/tv_regdiscsubtotal"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="scd"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/linearTotal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:layout_weight="1"
                            android:orientation="horizontal"

                            >



                            <TextView

                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:gravity="right"



                                android:text="Total:"
                                android:layout_weight="4"
                                />

                            <TextView
                                android:id="@+id/tv_totalquantity"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:gravity="right"

                                android:layout_weight="1"

                                android:text="1"
                                />


                            <TextView
                                android:id="@+id/tv_totalsubtotal"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="scd"
                                />

                        </LinearLayout>

                    </LinearLayout>


                    <TextView
                        android:id="@+id/tv_remarks"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"



                        android:text="TextView"
                        android:layout_weight="3"
                        />

                    <LinearLayout
                        android:id="@+id/ll_referenceLinear"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_ReferenceSI"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="8dp"
                            android:textColor="@color/black"
                            android:text="Reference SI No.:"

                            />
                        <TextView
                            android:id="@+id/tv_SINo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:textColor="@color/black"
                            android:layout_marginLeft="8dp"
                            android:text="123"
                            android:layout_weight="3"
                            />

                    </LinearLayout>





                </LinearLayout>



            </LinearLayout>



        </LinearLayout>











</androidx.cardview.widget.CardView>