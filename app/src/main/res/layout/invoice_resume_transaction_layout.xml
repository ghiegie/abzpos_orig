<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginTop="1dp"
    android:layout_marginRight="2dp"
    android:layout_marginBottom="1dp"
    android:id="@+id/linear_orderlist_layout"
    >


        <LinearLayout
            android:id="@+id/ll_linearLayoutMaster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/customborder"

            android:orientation="vertical">


            <LinearLayout

                android:id="@+id/ll_backgroundPosition"
                android:background="@color/white"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tv_BtnNumber"
                        android:layout_weight="1"
                        android:textSize="20dp"

                        android:textColor="@color/black"
                        android:textStyle="italic|bold"
                        android:background="@color/Java"
                        android:layout_width="match_parent"

                        android:text="PLU123"
                        android:layout_height="match_parent"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                    <TextView


                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"

                        android:text="Transaction # :  "
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@id/tv_ItemName"

                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"

                        android:text="itemName"
                        android:layout_height="match_parent"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView


                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"

                            android:text="Date   :  "
                            android:layout_height="match_parent"/>
                        <TextView
                            android:id="@+id/tv_itemDate"

                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"

                            android:text="Date"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView


                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"

                            android:text="Time  :  "
                            android:layout_height="match_parent"/>
                        <TextView
                           android:id="@+id/tv_itemTime"

                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"

                            android:text="Time"
                            android:layout_height="match_parent"/>
                    </LinearLayout>


                </LinearLayout>







            </LinearLayout>






        </LinearLayout>











</androidx.cardview.widget.CardView>