<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"


    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">




    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:id="@+id/imgb_exit"
        android:src="@drawable/ic_baseline_close_24"/>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <LinearLayout
            android:layout_width="0dp"
            android:layout_marginRight="5dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textSize="17dp"



                android:background="@color/Java"
                android:textColor="@color/black"
                android:textStyle="italic|bold"
                android:layout_margin="1dp"
                android:text="SUB TOTAL"
                android:layout_marginBottom="0dp"

                android:gravity="start"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_admin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"






                android:layout_weight="1"


                android:layout_centerHorizontal="true"
                android:background="@drawable/custom_button_rounded8"
                android:drawableTint="@color/myColorIconAdminPriveleges"
                android:elevation="4dp"

                android:shadowColor="@color/myColorActionBar"
                android:text="ADMIN"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@color/myColorButtonBlack"
                app:drawableTopCompat="@drawable/ic_baseline_admin_panel_settings_24"/>


            <!--                                <androidx.appcompat.widget.AppCompatButton-->
            <!--                                    android:id="@+id/btn_cashierFunction"-->
            <!--                                    android:layout_width="match_parent"-->
            <!--                                    android:layout_height="match_parent"-->
            <!--                                    android:text="CASHIER FUNCTION" />-->


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"

                android:layout_marginRight="10dp"
                android:textSize="17dp"
                android:background="@color/Java"
                android:textColor="@color/black"
                android:textStyle="italic|bold"
                android:layout_margin="1dp"
                android:text="CASH TOTAL"
                android:layout_marginBottom="0dp"

                android:gravity="start"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_cashier"
                android:layout_width="match_parent"
                android:layout_height="match_parent"


                android:layout_weight="1"
                android:layout_centerHorizontal="true"


                android:background="@drawable/custom_button_rounded8"
                android:drawableTint="@color/myColorIconAdminPriveleges"
                android:elevation="4dp"

                android:textStyle="bold"


                android:shadowColor="@color/myColorActionBar"
                android:text="CASHIER"
                android:textAllCaps="false"
                android:textColor="@color/black"
                app:drawableTopCompat="@drawable/ic_baseline_point_of_sale_24"/>


            <!--                                <androidx.appcompat.widget.AppCompatButton-->
            <!--                                    android:id="@+id/btn_cashierFunction"-->
            <!--                                    android:layout_width="match_parent"-->
            <!--                                    android:layout_height="match_parent"-->
            <!--                                    android:text="CASHIER FUNCTION" />-->


        </LinearLayout>





    </LinearLayout>





</LinearLayout>