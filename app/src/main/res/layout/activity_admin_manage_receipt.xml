<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ADMIN.admin_manage_receipt"
    android:fadeScrollbars="false"
    android:scrollbarSize="20dp"
    android:scrollbarThumbVertical="@color/purple_700"
    android:orientation="vertical">


    <include layout="@layout/toolbar"

        android:id="@+id/toolbar"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <!--        <EditText-->
        <!--            android:id="@+id/et_testEdit"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:layout_weight="1"/>-->
        <LinearLayout
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/BIRGray"
                android:orientation="horizontal">

                <RadioGroup

                    android:id="@+id/rad_radgroupReceipt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:orientation="vertical">
                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/Java"
                            android:textColor="@color/black"
                            android:textStyle="italic|bold"
                            android:layout_margin="1dp"
                            android:text="RA"


                            android:gravity="start"/>


                        <RadioButton
                            android:id="@+id/rad_header"

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:background="@color/white"
                            android:checked="true"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:layout_weight="1"

                            android:text="Header"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:orientation="vertical">
                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/Java"
                            android:textColor="@color/black"
                            android:textStyle="italic|bold"
                            android:layout_margin="1dp"
                            android:text="PO"


                            android:gravity="start"/>
                        <RadioButton
                            android:id="@+id/rad_footer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"


                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:layout_weight="1"
                            android:text="Footer"/>

                    </LinearLayout>
                </RadioGroup>





            </LinearLayout>
            <LinearLayout
                android:background="@color/BIRGray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:orientation="vertical">
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/Java"
                        android:textColor="@color/black"
                        android:textStyle="italic|bold"
                        android:layout_margin="1dp"
                        android:text="D05"
                        android:layout_marginBottom="0dp"

                        android:gravity="start"/>
                    <androidx.appcompat.widget.AppCompatImageButton
                        android:layout_width="match_parent"
                        android:id="@+id/btn_addNew"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_baseline_add"
                        android:text="button1"

                        android:background="@color/white"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:orientation="vertical">
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/Java"
                        android:textColor="@color/black"
                        android:textStyle="italic|bold"
                        android:layout_margin="1dp"
                        android:text="D09"
                        android:layout_marginBottom="0dp"

                        android:gravity="start"/>
                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/btn_delete"
                        android:layout_width="match_parent"
                        android:src="@drawable/ic_baseline_delete_24"
                        android:layout_height="match_parent"
                        android:text="button1"
                        android:background="@color/white"
                        android:layout_weight="1"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:orientation="vertical">
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/Java"
                        android:textColor="@color/black"
                        android:textStyle="italic|bold"
                        android:layout_margin="1dp"
                        android:text="D13"
                        android:layout_marginBottom="0dp"

                        android:gravity="start"/>
                    <androidx.appcompat.widget.AppCompatImageButton
                        android:layout_width="match_parent"
                        android:id="@+id/btn_printTest"
                        android:layout_height="60dp"
                        android:visibility="visible"
                        android:src="@drawable/ic_baseline_print_24"
                        android:text="button1"
                        android:background="@color/white"
                        android:layout_weight="1"/>
                    <!--            <androidx.appcompat.widget.AppCompatImageButton-->
                    <!--                android:layout_width="wrap_content"-->
                    <!--                android:layout_height="wrap_content"-->
                    <!--                android:visibility="invisible"-->
                    <!--                android:text="button1"-->
                    <!--                android:layout_weight="1"/>-->
                    <!--            <androidx.appcompat.widget.AppCompatImageButton-->
                    <!--                android:layout_width="wrap_content"-->
                    <!--                android:layout_height="wrap_content"-->
                    <!--                android:visibility="invisible"-->
                    <!--                android:text="button1"-->
                    <!--                android:layout_weight="1"/>-->

                </LinearLayout>

            </LinearLayout>




            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_headerFooterList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>







        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:background="@color/teal_200"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RECEIPT TEXT DISPLAY"
                android:gravity="center"
                android:textColor="@color/black"

                />


            <ScrollView

    android:layout_width="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_height="match_parent"

    android:gravity="center"
    android:layout_marginBottom="20dp"
    android:layout_marginTop="20dp"

    android:background="@color/white"
    >



    <LinearLayout
        android:id="@+id/ll_page"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="match_parent"

        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"

        android:background="@color/white"
        android:orientation="vertical">



        <TextView

            android:id="@+id/tv_receiptDisplay"
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:textSize="13dp"
            />

    </LinearLayout>

</ScrollView>








        </LinearLayout>

    </LinearLayout>



</LinearLayout>








