                <!--            android:layout_weight="1"-->
                <!--            android:text="Align Right"/>-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:orientation="vertical">
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/Java"
                        android:textColor="@color/black"
                        android:textStyle="italic|bold"
                        android:layout_margin="1dp"
                        android:text="D01"
                        android:layout_marginBottom="0dp"

                        android:gravity="start"/>
                    <ImageButton
                        android:id="@+id/ib_tab"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/header_footer_tab"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:orientation="vertical">
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/Java"
                        android:textColor="@color/black"
                        android:textStyle="italic|bold"
                        android:layout_margin="1dp"
                        android:text="D05"
                        android:layout_marginBottom="0dp"

                        android:gravity="start"/>
                    <ImageButton
                        android:id="@+id/ib_left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/header_footer_left"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:orientation="vertical">
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/Java"
                        android:textColor="@color/black"
                        android:textStyle="italic|bold"
                        android:layout_margin="1dp"
                        android:text="D09"
                        android:layout_marginBottom="0dp"

                        android:gravity="start"/>

                    <ImageButton
                        android:id="@+id/ib_center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/header_footer_center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:orientation="vertical">
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/Java"
                        android:textColor="@color/black"
                        android:textStyle="italic|bold"
                        android:layout_margin="1dp"
                        android:text="D13"
                        android:layout_marginBottom="0dp"

                        android:gravity="start"/>

                    <ImageButton
                        android:id="@+id/ib_right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/header_footer_right"/>
                </LinearLayout>





            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:id="@+id/et_addNewText"
                    android:padding="5dp"
                    android:maxLength="32"
                    android:hint="Enter Text"
                    android:layout_weight="1"
                    android:background="@drawable/custom_edittext_dialog"
                    android:textSize="30dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:text="Clear"/>
            </LinearLayout>


            <CheckBox
                android:id="@+id/cbx_doubleWidth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Double Width"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:orientation="vertical">
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/Java"
                        android:textColor="@color/black"
                        android:textStyle="italic|bold"
                        android:layout_margin="1dp"
                        android:text="SUB TOTAL"
                        android:layout_marginBottom="0dp"

                        android:gravity="start"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_cancel"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:text="CANCEL"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:orientation="vertical">
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/Java"
                        android:textColor="@color/black"
                        android:textStyle="italic|bold"
                        android:layout_margin="1dp"
                        android:text="CASH TOTAL"
                        android:layout_marginBottom="0dp"

                        android:gravity="start"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_save"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:text="SAVE"/>
                </LinearLayout>



            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>




</LinearLayout>