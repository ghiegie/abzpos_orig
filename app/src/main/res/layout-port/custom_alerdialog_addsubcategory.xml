<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/myColorDialogBG"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <androidx.appcompat.widget.AppCompatSpinner
            android:inputType="number"
            android:textColor="@color/myColorEditTextDialogDisable"
            android:textColorHint="@color/myColorDialogBG"
            android:elevation="2dp"
            android:layout_marginTop="10dp"
            android:background="@android:drawable/btn_dropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/SubCategorySpinner"
            android:hint="SubCategory Name"
            android:layout_marginRight="5dp"

            android:layout_weight="1"/>


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/subCategoryID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_edittext_dialog"
            android:elevation="2dp"
            android:enabled="false"
            android:hint="SubCategory ID"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="@color/myColorDialogBG"
            android:layout_marginTop="10dp"/>


        <androidx.appcompat.widget.AppCompatEditText
            android:inputType="text"
            android:textColor="@color/myColorEditTextDialogDisable"
            android:textColorHint="@color/myColorDialogBG"
            android:elevation="2dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_edittext_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/SubCategoryName"
            android:hint="SubCategory Name"

            android:layout_weight="1"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:inputType="text"
            android:textColor="@color/myColorEditTextDialogDisable"
            android:textColorHint="@color/myColorDialogBG"
            android:elevation="2dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_edittext_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/SubCategoryDesc"
            android:hint="SubCategory Description"

            android:layout_weight="1"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:elevation="2dp"
                android:textColor="@color/myColorBackgroundWhite"
                android:textStyle="bold"
                android:layout_weight=".5"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_button_dialog"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnSaveAddProduct"
                android:text="SAVE"/>

            <androidx.appcompat.widget.AppCompatButton
                android:elevation="2dp"
                android:textColor="@color/myColorBackgroundWhite"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_weight=".5"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_button_dialog"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnCancelAddProduct"
                android:text="CANCEL"/>
            <androidx.appcompat.widget.AppCompatButton
                android:elevation="2dp"
                android:textColor="@color/myColorBackgroundWhite"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_weight=".5"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_button_dialog"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnAdditem"
                android:text="ADD ITEM"/>

        </LinearLayout>



    </LinearLayout>
</LinearLayout>