<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>

        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">

        <item>
            <shape android:shape="rectangle">
                <corners android:radius="2dp" />
                <solid android:color="@color/black" />
                <stroke
                    android:width="1dp"
                android:color="#000000" />
            </shape>
        </item>

        <!-- Line on the side -->
        <item
            android:left="10dp"
        android:right="10dp"
        android:top="0dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Change to your desired line color -->
            <size android:height="2dp" /> <!-- Adjust the height of the line -->
        </shape>
    </item>

        </layer-list>
    </item>
</selector>

