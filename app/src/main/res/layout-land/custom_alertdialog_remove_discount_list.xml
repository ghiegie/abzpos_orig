<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatSpinner

            android:textColor="@color/myColorEditTextDialogDisable"
            android:textColorHint="@color/myColorDialogBG"
            android:elevation="2dp"
            android:layout_marginTop="10dp"
            android:background="@android:drawable/btn_dropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sp_discountID"
            android:hint="SubCategory Name"
            android:layout_marginRight="5dp"

            />





        <androidx.appcompat.widget.AppCompatEditText
            android:inputType="text"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/et_discountName"
            android:enabled="false"
            android:background="@drawable/custom_edittext_dialog"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"

            android:elevation="2dp"

            android:textColor="@color/myColorEditTextDialogDisable"
            android:textColorHint="@color/myColorDialogBG" />

        <androidx.appcompat.widget.AppCompatEditText
            android:inputType="text"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/et_discountAmount"
            android:enabled="false"
            android:background="@drawable/custom_edittext_dialog"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"

            android:elevation="2dp"

            android:textColor="@color/myColorEditTextDialogDisable"
            android:textColorHint="@color/myColorDialogBG" />

        <androidx.appcompat.widget.AppCompatEditText
            android:inputType="text"
            android:id="@+id/et_discountComputation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edittext_dialog"
            android:layout_marginBottom="10dp"
            android:elevation="2dp"
            android:visibility="gone"
            android:text="TotalSelectedAmount"
            android:textColor="@color/myColorEditTextDialogDisable"
            android:textColorHint="@color/myColorDialogBG" />
        <RadioGroup
            android:id="@+id/rad_radGroup2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="CANCEL"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_removeItem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="REMOVE DISCOUNT"
                />


        </LinearLayout>





    </LinearLayout>

</LinearLayout>