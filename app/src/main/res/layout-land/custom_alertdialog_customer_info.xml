<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/myColorDialogBG"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_typeOfCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Additional Customer Info"

            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:textSize="20dp"
            android:textStyle="bold" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_custName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:background="@drawable/custom_edittext_dialog"
            android:elevation="2dp"
            android:imeOptions="actionNext"
            android:hint="Customer Name"
            android:inputType="text"
            android:textColor="@color/myColorEditTextDialogDisable"
            android:textColorHint="@color/myColorDialogBG" />
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_custIDNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:background="@drawable/custom_edittext_dialog"
            android:elevation="2dp"
            android:hint="Address."
            android:inputType="text"
            android:textColor="@color/myColorEditTextDialogDisable"
            android:textColorHint="@color/myColorDialogBG" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_custTIN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:background="@drawable/custom_edittext_dialog"
            android:elevation="2dp"
            android:hint="TIN"

            android:inputType="number"
            android:textColor="@color/myColorEditTextDialogDisable"
            android:textColorHint="@color/myColorDialogBG" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_saveCustInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:focusable="true"
                android:layout_weight=".5"
                android:background="@drawable/custom_button_dialog"
                android:layout_marginRight="10dp"
                android:elevation="2dp"
                android:text="SUBMIT"
                android:textColor="@color/myColorBackgroundWhite"
                android:textStyle="bold" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_cancelCustInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"

                android:layout_weight=".5"
                android:background="@drawable/custom_button_dialog"
                android:elevation="2dp"
                android:text="CANCEL"
                android:textColor="@color/myColorBackgroundWhite"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>
</LinearLayout>