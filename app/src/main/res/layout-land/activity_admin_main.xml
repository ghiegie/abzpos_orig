<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"

    tools:context=".ADMIN.adminMain">


    <include
        android:id="@+id/toolbar"

        layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:orientation="horizontal"

        android:weightSum="3">


    </LinearLayout>

    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"

            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingTop="20dp"
            android:paddingRight="15dp"
            android:paddingBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:layout_marginBottom="0dp"
                        android:background="@color/Java"
                        android:gravity="start"
                        android:text="D01"
                        android:textColor="@color/black"

                        android:textStyle="italic|bold" />

                    <com.abztrakinc.ABZPOS.CustomButtonForDrawableTop
                        android:id="@+id/btnStaff"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/custom_button_rounded8"
                        android:drawableTint="@color/myColorIconAdminPriveleges"
                        android:elevation="4dp"
                        android:shadowColor="@color/myColorActionBar"
                        android:text="Staff"
                        android:textAllCaps="false"
                        android:textColor="@color/myColorWhite"
                        android:textSize="25dp"
                        app:drawableTopCompat="@drawable/ic_people_black_48px">

                    </com.abztrakinc.ABZPOS.CustomButtonForDrawableTop>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:layout_marginBottom="0dp"
                        android:background="@color/Java"
                        android:gravity="start"
                        android:text="D02"
                        android:textColor="@color/black"

                        android:textStyle="italic|bold" />

                    <com.abztrakinc.ABZPOS.CustomButtonForDrawableTop
                        android:id="@+id/btnProduct"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/custom_button_rounded8"
                        android:drawableTint="@color/myColorIconAdminPriveleges"
                        android:elevation="4dp"
                        android:shadowColor="@color/myColorActionBar"
                        android:text="Products"
                        android:textAllCaps="false"
                        android:textColor="@color/myColorWhite"
                        android:textSize="25dp"
                        app:drawableTopCompat="@drawable/ic_shopping_cart_black_48px">

                    </com.abztrakinc.ABZPOS.CustomButtonForDrawableTop>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:layout_marginBottom="0dp"
                        android:background="@color/Java"
                        android:gravity="start"
                        android:text="D03"
                        android:textColor="@color/black"

                        android:textStyle="italic|bold" />

                    <com.abztrakinc.ABZPOS.CustomButtonForDrawableTop
                        android:id="@+id/btn_Journal"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/custom_button_rounded8"
                        android:drawableTint="@color/myColorIconAdminPriveleges"
                        android:elevation="4dp"
                        android:shadowColor="@color/myColorActionBar"
                        android:text="Journals"
                        android:textAllCaps="false"
                        android:textColor="@color/myColorWhite"
                        android:textSize="25dp"
                        app:drawableTopCompat="@drawable/ic_assignment_black_48px">

                    </com.abztrakinc.ABZPOS.CustomButtonForDrawableTop>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:layout_marginBottom="0dp"
                        android:background="@color/Java"
                        android:gravity="start"
                        android:text="D04"
                        android:textColor="@color/black"

                        android:textStyle="italic|bold" />

                    <com.abztrakinc.ABZPOS.CustomButtonForDrawableTop
                        android:id="@+id/btnReceipt"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/custom_button_rounded8"
                        android:drawableTint="@color/myColorIconAdminPriveleges"
                        android:elevation="4dp"
                        android:shadowColor="@color/myColorActionBar"
                        android:text="Receipt Settings"
                        android:textAllCaps="false"
                        android:textColor="@color/myColorWhite"
                        android:textSize="25dp"
                        app:drawableTopCompat="@drawable/ic_baseline_settings_24">

                    </com.abztrakinc.ABZPOS.CustomButtonForDrawableTop>

                </LinearLayout>











            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:layout_marginBottom="0dp"
                        android:background="@color/Java"
                        android:gravity="start"
                        android:text="D05"
                        android:textColor="@color/black"

                        android:textStyle="italic|bold" />

                    <com.abztrakinc.ABZPOS.CustomButtonForDrawableTop
                        android:id="@+id/btnreportWriter"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/custom_button_rounded8"
                        android:drawableTint="@color/myColorIconAdminPriveleges"
                        android:elevation="4dp"
                        android:shadowColor="@color/myColorActionBar"
                        android:text="REPORT WRITER"
                        android:textAllCaps="false"
                        android:textColor="@color/myColorWhite"
                        android:textSize="25dp"
                        app:drawableTopCompat="@drawable/ic_assignment_black_48px">

                    </com.abztrakinc.ABZPOS.CustomButtonForDrawableTop>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:layout_marginBottom="0dp"
                        android:background="@color/Java"
                        android:gravity="start"
                        android:text="D06"
                        android:textColor="@color/black"

                        android:textStyle="italic|bold" />

                    <com.abztrakinc.ABZPOS.CustomButtonForDrawableTop
                        android:id="@+id/btnRestoreDb"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/custom_button_rounded8"
                        android:drawableTint="@color/myColorIconAdminPriveleges"
                        android:elevation="4dp"
                        android:shadowColor="@color/myColorActionBar"
                        android:text="RESTORE DATABASE"
                        android:textAllCaps="false"
                        android:textColor="@color/myColorWhite"
                        android:textSize="25dp"
                        app:drawableTopCompat="@drawable/ic_assignment_black_48px">

                    </com.abztrakinc.ABZPOS.CustomButtonForDrawableTop>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:layout_marginBottom="0dp"
                        android:background="@color/Java"
                        android:gravity="start"
                        android:text="D07"
                        android:textColor="@color/black"

                        android:textStyle="italic|bold" />

                    <com.abztrakinc.ABZPOS.CustomButtonForDrawableTop
                        android:id="@+id/btnPosSettings"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/custom_button_rounded8"
                        android:drawableTint="@color/myColorIconAdminPriveleges"
                        android:elevation="4dp"
                        android:shadowColor="@color/myColorActionBar"
                        android:text="POS Settings"
                        android:textAllCaps="false"
                        android:textColor="@color/myColorWhite"
                        android:textSize="25dp"
                        app:drawableTopCompat="@drawable/ic_baseline_settings_24">

                    </com.abztrakinc.ABZPOS.CustomButtonForDrawableTop>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:layout_marginBottom="0dp"
                        android:background="@color/Java"
                        android:gravity="start"
                        android:text="D08"
                        android:textColor="@color/black"

                        android:textStyle="italic|bold" />

                    <com.abztrakinc.ABZPOS.CustomButtonForDrawableTop
                        android:id="@+id/btn_Exit"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/custom_button_rounded8"
                        android:drawableTint="@color/myColorIconAdminPriveleges"
                        android:elevation="4dp"
                        android:shadowColor="@color/myColorActionBar"
                        android:text="Exit"
                        android:textAllCaps="false"
                        android:textColor="@color/myColorWhite"
                        android:textSize="25dp"
                        app:drawableTopCompat="@drawable/ic_baseline_exit_to_app_24">

                    </com.abztrakinc.ABZPOS.CustomButtonForDrawableTop>



                </LinearLayout>










            </LinearLayout>






        </LinearLayout>


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/teal_200"/>






</RelativeLayout>